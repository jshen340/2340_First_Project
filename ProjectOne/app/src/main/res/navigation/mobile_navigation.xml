<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.a2340projectone.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
        android:id="@+id/action_navigation_home_to_list"
        app:destination="@id/navigation_dashboard" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.a2340projectone.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_navigation_dashboard_to_add_task"
            app:destination="@id/add_task"/>
        <action
        android:id="@+id/action_add_task_to_navigation_dashboard"
        app:destination="@id/navigation_dashboard"/>
        <argument
        android:name="todoArg"
        app:argType="integer" />
</fragment>
    <fragment
    android:id="@+id/add_task"
    android:name="com.example.a2340projectone.ui.dashboard.add_task"
    android:label="fragment_add_task"
    tools:layout="@layout/fragment_add_task" >
    <action
    android:id="@+id/action_add_task_to_navigation_dashboard"
    app:destination="@id/navigation_dashboard"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.a2340projectone.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_add_exam"
            app:destination="@id/add_exam" />
        <argument
            android:name="myArg"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/add_exam"
        android:name="com.example.a2340projectone.ui.notifications.add_exam"
        android:label="fragment_add_exam"
        tools:layout="@layout/fragment_add_exam" >
        <action
            android:id="@+id/action_add_exam_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>
</navigation>