<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.a2340projectone.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.a2340projectone.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.a2340projectone.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_add_exam"
            app:destination="@id/add_exam" />
        <argument
            android:name="exam"
            app:argType="string" />
        <argument
            android:name="course"
            app:argType="string" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="location"
            app:argType="string" />
        <argument
            android:name="time"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/add_exam"
        android:name="com.example.a2340projectone.ui.notifications.add_exam"
        android:label="Add Exams"
        tools:layout="@layout/fragment_add_exam" >
        <action
            android:id="@+id/action_add_exam_to_navigation_notifications"
            app:destination="@id/navigation_notifications" >
            <argument
                android:name="exam" />
            <argument
                android:name="course" />
            <argument
                android:name="date" />
            <argument
                android:name="location" />
            <argument
                android:name="time" />
        </action>
    </fragment>
</navigation>