<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toTopOf="@id/nav_view"
    tools:context=".ui.home.coursedash"
    tools:layout_editor_absoluteX="-17dp"
    tools:layout_editor_absoluteY="-65dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/CourseDashboard"
        android:layout_width="286dp"
        android:layout_height="53dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="63dp"
        android:text="Course Dashboard"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#090909"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addcbtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="266dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="160dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/courselist_recycle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/courselist_recycle"
        android:layout_width="394dp"
        android:layout_height="639dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CourseDashboard"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>